generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicles {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  name          String      @db.VarChar(255)
  description   String?
  isOwned       Boolean     @default(true) @map("is_owned")
  type          VehicleTypes @relation(fields: [typeId], references: [id])
  typeId        Int         @unique @map("type_id")
  services      Services[]
  ownerId       String?     @db.Uuid @map("owner_id")
  owner         Profiles?    @relation(fields: [ownerId], references: [id])

  @@map("vehicles")
}

model VehicleTypes {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime? @default(now()) @map("created_at")
  name          String?   @db.VarChar
  description   String?
  vehicle       Vehicles?

  @@map("vehicle_types")
}

model Profiles {
  id        String      @id @db.Uuid
  updatedAt DateTime?   @db.Timestamptz(6) @map("updated_at")
  email     String      @unique
  username  String?     @unique
  bio       String?
  avatarUrl String?     @map("avatar_url")
  website   String?
  vehicles  Vehicles[]

  @@map("profiles")
}

model Services {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now()) @map("created_at")
  name        String?
  description String?
  vehicle     Vehicles?  @relation(fields: [vehicleId], references: [id])
  vehicleId   Int? @map("vehicle_id")

  @@map("services")
}
